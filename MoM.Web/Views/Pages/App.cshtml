@{
    ViewBag.Title = "Home";
}

<nav class="navbar navbar-light navbar-fixed-top mom-header-navbar">
    <div class="pull-xs-left">
        <a class="navbar-brand text-xs-left" [routerLink]="['/Home']">
            <img src="~/site/logo.png" srcset="~/site/logo.svg 1x" class="navbar-brand" alt="EasyModules.NET Logo" width="320" height="48">
        </a>
    </div>
    <div class="pull-xs-right">
        <button type="button" class="navbar-toggler hidden-lg-up text-xs-right" (click)="isCollapsed = !isCollapsed">
            <i class="fa fa-bars"></i>
        </button>
    </div>
    <div class="hidden-md-down" *ngIf="routes != null">
        <nav class="nav navbar-nav pull-xs-left">
            <a class="nav-item nav-link" *ngFor="let rt of menu" [routerLink]="[rt.name]">{{rt.name}}</a>
        </nav>
        <form class="pull-xs-right">
            <label class="sr-only" for="search">Search...</label>
            <div class="input-group mom-header-search">
                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                <input type="text" class="form-control" id="search" placeholder="Search...">
            </div>
        </form>
    </div>
    <div class="container-fluid mom-collapse-menu" *ngIf="routes != null" [collapse]="isCollapsed">
        <nav class="nav navbar-nav pull-xs-left">
            <a class="nav-item nav-link" *ngFor="let rt of menu" [routerLink]="[rt.name]">{{rt.name}}</a>
        </nav>
        <form class="pull-xs-right">
            <label class="sr-only" for="search">Search...</label>
            <div class="input-group mom-header-search">
                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                <input type="text" class="form-control" id="search" placeholder="Search...">
            </div>
        </form>
    </div>
</nav>
<div class="container-fluid">
